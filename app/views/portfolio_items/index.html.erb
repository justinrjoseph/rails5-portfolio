<h1>Portfolio Items</h1>

<%= link_to 'Create Portfolio Item', new_portfolio_item_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <h2><%= link_to portfolio_item.title, portfolio_item_path(portfolio_item) %></h2>
  <p><%= portfolio_item.subtitle %></p>
  <p><%= portfolio_item.body %></p>
  <%= image_tag portfolio_item.thumbnail if portfolio_item.thumbnail %>
  <%= link_to 'Edit', edit_portfolio_item_path(portfolio_item) %>
<% end %>